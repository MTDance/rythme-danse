{% extends 'users.html.twig' %}

{% block title %}Modification du mot de passe de
	{{ app.user.firstname}}
	{{ app.user.name }}
{% endblock %}

{% block body %}
	<div class="container">
    {% for message in app.flashes('error')%}
		<div>
			<div class="alert alert-danger" role="alert">
				{{message}}
			</div>
		</div>
	{% endfor %}
		<div>
			<h1>Modification du mot de passe de
				{{ app.user.firstname}}
				{{ app.user.name }}</h1>
			<form method="post">
                <div class="form-group">
                    <label class="text-white" for="pass">Nouveau mot de passe</label>
                    <input type="password" id="pass" name="pass" class="form-control">
                </div>
                <div class="form-group">
                    <label class="text-white" for="pass2">Confirmer le nouveau mot de passe</label>
                    <input type="password" id="pass2" name="pass2" class="form-control" >
                </div>
                <button class="btn btn-dark">Valider</button>
            </form>
			</div>
		</div>
	{% endblock %}
